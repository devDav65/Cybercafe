<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.monprojet.controllers.JournalController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 20;"
      stylesheets="@../css/journal.css">
  <!-- ===== Titre ===== -->
  <Label text="Gestion du Journal des Paquets"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
  <!-- ===== Zone de recherche et actions ===== -->
  <HBox spacing="10" alignment="CENTER_LEFT">
    <TextField fx:id="searchField" promptText="Rechercher par IP ou protocole..."/>
    <Button text="Rechercher" onAction="#rechercher"/>
    <Button text="RÃ©initialiser" onAction="#reset"/>
    <Button text="Supprimer" onAction="#supprimerSelection" styleClass="danger-btn"/>
  </HBox>
  <!-- ===== Table des journaux ===== -->
  <TableView fx:id="journalTable" prefHeight="300" prefWidth="700">
    <columns>
      <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
      <TableColumn text="IP Source" fx:id="colSource" prefWidth="120"/>
      <TableColumn text="IP Destination" fx:id="colDest" prefWidth="120"/>
      <TableColumn text="Protocole" fx:id="colProto" prefWidth="100"/>
      <TableColumn text="Horloge" fx:id="colHeure" prefWidth="140"/>
      <TableColumn text="Action" fx:id="colAction" prefWidth="120"/>
    </columns>
  </TableView>
</VBox>
