<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.monprojet.controllers.ReglefiltreController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 20;"
      stylesheets="@../css/reglefiltre.css">
  <!-- ===== Titre ===== -->
  <Label text="Gestion des Règles de Filtrage"
                 style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
  <!-- ===== Formulaire d'ajout / modification ===== -->
  <HBox spacing="10" alignment="CENTER_LEFT">
    <TextField fx:id="ipField" promptText="Adresse IP (optionnel)"/>
    <ComboBox fx:id="protocoleCombo" promptText="Protocole"/>
    <ComboBox fx:id="actionCombo" promptText="Action"/>
    <Button text="Ajouter" onAction="#ajouterRegle"/>
    <Button text="Modifier" onAction="#modifierRegle"/>
    <Button text="Supprimer" onAction="#supprimerRegle" styleClass="danger-btn"/>
  </HBox>
  <!-- ===== Zone de recherche ===== -->
  <HBox spacing="10" alignment="CENTER_LEFT">
    <TextField fx:id="searchField" promptText="Recherche IP / Protocole"/>
    <Button text="Rechercher" onAction="#rechercherRegle"/>
    <Button text="Réinitialiser" onAction="#resetRecherche"/>
  </HBox>
  <!-- ===== Tableau des règles ===== -->
  <TableView fx:id="tableRegles" prefWidth="600" prefHeight="300">
    <columns>
      <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
      <TableColumn text="IP" fx:id="colIp" prefWidth="150"/>
      <TableColumn text="Protocole" fx:id="colProtocole" prefWidth="120"/>
      <TableColumn text="Action" fx:id="colAction" prefWidth="120"/>
    </columns>
  </TableView>
</VBox>
